# =============================================================================
# WISEBOOK ERP - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# IMPORTANT: Copy this file to .env.production and fill with actual values
# NEVER commit .env.production to git!
#
# Generate SECRET_KEY with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
# =============================================================================

# =============================================================================
# CRITICAL SECURITY SETTINGS
# =============================================================================

# MUST be set to False in production
DEBUG=False

# Generate a new secure key for production (NEVER use the dev key!)
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY_MINIMUM_64_CHARS

# Allowed hosts (comma-separated domain names)
# Example: wisebook.com,www.wisebook.com,api.wisebook.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CSRF trusted origins (comma-separated HTTPS URLs)
# Example: https://wisebook.com,https://www.wisebook.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://wisebook_user:STRONG_PASSWORD@localhost:5432/wisebook_production

# Alternative individual settings (if not using DATABASE_URL)
DB_NAME=wisebook_production
DB_USER=wisebook_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS & CELERY
# =============================================================================

# Redis connection string
# For password-protected Redis: redis://:PASSWORD@localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
# NEVER use CORS_ALLOW_ALL_ORIGINS=True in production!
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://app.your-domain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Server
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Admin email (for error notifications)
ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# AWS S3 (Optional - for static/media files)
# =============================================================================

# Set to True to use S3 for static/media files
USE_S3=False

# AWS Credentials (if USE_S3=True)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-west-1

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry DSN for error tracking (optional but recommended)
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Release version for Sentry
RELEASE_VERSION=3.0.0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Timezone
TIMEZONE=Africa/Douala

# Default currency
DEFAULT_CURRENCY=XAF

# Default country
DEFAULT_COUNTRY=CM
