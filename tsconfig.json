{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/store/*": ["./src/store/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@atlas/shared": ["./packages/shared/src"],
      "@atlas/shared/*": ["./packages/shared/src/*"],
      "@atlas/core": ["./packages/core/src"],
      "@atlas/core/*": ["./packages/core/src/*"],
      "@atlas/data": ["./packages/data/src"],
      "@atlas/data/*": ["./packages/data/src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/*.backup.tsx",
    "**/*.broken.tsx",
    "src/pages/assets/CompleteAssetsModulesDetailed.tsx",
    "src/pages/financial/CompleteFinancialModule.tsx",
    "src/pages/accounting/CompleteJournalsPage.tsx",
    "src/pages/accounting/EntriesPageClean.tsx",
    "src/pages/dashboard/KPIDashboard.tsx",
    "src/pages/taxation/CompleteTaxationModule.tsx",
    "src/test/setup/test-setup.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}